# ============================================
# CONFIGURACIÓN NGINX PARA GestionCloud
# ============================================
# Copia este archivo a /etc/nginx/sites-available/gestioncloud
# y crea un enlace simbólico en /etc/nginx/sites-enabled/
# 
# sudo cp despliegue/nginx.conf.example /etc/nginx/sites-available/gestioncloud
# sudo ln -s /etc/nginx/sites-available/gestioncloud /etc/nginx/sites-enabled/
# sudo nginx -t
# sudo systemctl reload nginx

# Redirigir HTTP a HTTPS (opcional, descomentar cuando tengas SSL)
# server {
#     listen 80;
#     server_name tu-dominio.com www.tu-dominio.com;
#     return 301 https://$server_name$request_uri;
# }

server {
    listen 80;
    # listen 443 ssl http2;  # Descomentar cuando tengas SSL
    server_name tu-dominio.com www.tu-dominio.com;

    # Tamaño máximo de archivo subido (ajustar según necesidad)
    client_max_body_size 50M;

    # Archivos de log
    access_log /var/log/nginx/gestioncloud_access.log;
    error_log /var/log/nginx/gestioncloud_error.log;

    # Configuración SSL (descomentar cuando tengas certificado)
    # ssl_certificate /etc/letsencrypt/live/tu-dominio.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/tu-dominio.com/privkey.pem;
    # ssl_protocols TLSv1.2 TLSv1.3;
    # ssl_ciphers HIGH:!aNULL:!MD5;
    # ssl_prefer_server_ciphers on;

    # Archivos estáticos
    location /static/ {
        alias /var/www/gestioncloud/staticfiles/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # Archivos de media
    location /media/ {
        alias /var/www/gestioncloud/media/;
        expires 7d;
        add_header Cache-Control "public";
    }

    # Proxy a Gunicorn
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Favicon
    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    # Robots.txt
    location = /robots.txt {
        access_log off;
        log_not_found off;
    }
}





