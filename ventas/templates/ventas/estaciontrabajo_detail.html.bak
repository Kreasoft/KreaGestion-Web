<div class="row">
    <div class="col-md-6">
        <h6 style="color: #2c3e50; font-weight: 600; margin-bottom: 15px;">
            <i class="fas fa-info-circle me-2"></i>Información Básica
        </h6>
        <table class="table table-sm">
            <tr>
                <td style="border: none; font-weight: 600; color: #6c757d; width: 40%;">Número:</td>
                <td style="border: none;">{{ estacion.numero }}</td>
            </tr>
            <tr>
                <td style="border: none; font-weight: 600; color: #6c757d;">Nombre:</td>
                <td style="border: none;">{{ estacion.nombre }}</td>
            </tr>
            <tr>
                <td style="border: none; font-weight: 600; color: #6c757d;">Descripción:</td>
                <td style="border: none;">{{ estacion.descripcion|default:"Sin descripción" }}</td>
            </tr>
            <tr>
                <td style="border: none; font-weight: 600; color: #6c757d;">Estado:</td>
                <td style="border: none;">
                    {% if estacion.activo %}
                        <span class="badge" style="background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%); color: white;">Activo</span>
                    {% else %}
                        <span class="badge" style="background: linear-gradient(135deg, #dc3545 0%, #bd2130 100%); color: white;">Inactivo</span>
                    {% endif %}
                </td>
            </tr>
        </table>
    </div>
    
    <div class="col-md-6">
        <h6 style="color: #2c3e50; font-weight: 600; margin-bottom: 15px;">
            <i class="fas fa-file-alt me-2"></i>Documentos Permitidos
        </h6>
        <div class="d-flex flex-wrap gap-2 mb-3">
            {% if estacion.puede_facturar %}
                <span class="badge" style="background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%); color: white;">
                    <i class="fas fa-file-invoice me-1"></i>Factura
                </span>
            {% endif %}
            {% if estacion.puede_boletar %}
                <span class="badge" style="background: linear-gradient(135deg, #17a2b8 0%, #117a8b 100%); color: white;">
                    <i class="fas fa-receipt me-1"></i>Boleta
                </span>
            {% endif %}
            {% if estacion.puede_guia %}
                <span class="badge" style="background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%); color: #212529;">
                    <i class="fas fa-truck me-1"></i>Guía
                </span>
            {% endif %}
            {% if estacion.puede_cotizar %}
                <span class="badge" style="background: linear-gradient(135deg, #6f42c1 0%, #5a32a3 100%); color: white;">
                    <i class="fas fa-calculator me-1"></i>Cotización
                </span>
            {% endif %}
            {% if estacion.puede_vale %}
                <span class="badge" style="background: linear-gradient(135deg, #fd7e14 0%, #e55a00 100%); color: white;">
                    <i class="fas fa-ticket-alt me-1"></i>Vale
                </span>
            {% endif %}
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <h6 style="color: #2c3e50; font-weight: 600; margin-bottom: 15px;">
            <i class="fas fa-sort-numeric-up me-2"></i>Correlativo de Ticket
        </h6>
        <div class="row">
            <div class="col-md-6">
                <table class="table table-sm">
                    <tr>
                        <td style="border: none; font-weight: 600; color: #6c757d; width: 50%;">Correlativo Actual:</td>
                        <td style="border: none;">
                            <span class="badge" style="background: linear-gradient(135deg, #6c757d 0%, #495057 100%); color: white; font-size: 1rem; padding: 8px 12px;">
                                #{{ estacion.correlativo_ticket }}
                            </span>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <h6 style="color: #2c3e50; font-weight: 600; margin-bottom: 15px;">
            <i class="fas fa-list-ol me-2"></i>Límites de Items por Documento
        </h6>
        <div class="row">
            <div class="col-md-6">
                <table class="table table-sm">
                    {% if estacion.puede_facturar %}
                    <tr>
                        <td style="border: none; font-weight: 600; color: #6c757d; width: 50%;">Máx. Items Factura:</td>
                        <td style="border: none;">{{ estacion.max_items_factura }}</td>
                    </tr>
                    {% endif %}
                    {% if estacion.puede_boletar %}
                    <tr>
                        <td style="border: none; font-weight: 600; color: #6c757d;">Máx. Items Boleta:</td>
                        <td style="border: none;">{{ estacion.max_items_boleta }}</td>
                    </tr>
                    {% endif %}
                    {% if estacion.puede_guia %}
                    <tr>
                        <td style="border: none; font-weight: 600; color: #6c757d;">Máx. Items Guía:</td>
                        <td style="border: none;">{{ estacion.max_items_guia }}</td>
                    </tr>
                    {% endif %}
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-sm">
                    {% if estacion.puede_cotizar %}
                    <tr>
                        <td style="border: none; font-weight: 600; color: #6c757d; width: 50%;">Máx. Items Cotización:</td>
                        <td style="border: none;">{{ estacion.max_items_cotizacion }}</td>
                    </tr>
                    {% endif %}
                    {% if estacion.puede_vale %}
                    <tr>
                        <td style="border: none; font-weight: 600; color: #6c757d;">Máx. Items Vale:</td>
                        <td style="border: none;">{{ estacion.max_items_vale }}</td>
                    </tr>
                    {% endif %}
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <h6 style="color: #2c3e50; font-weight: 600; margin-bottom: 15px;">
            <i class="fas fa-clock me-2"></i>Información de Auditoría
        </h6>
        <table class="table table-sm">
            <tr>
                <td style="border: none; font-weight: 600; color: #6c757d; width: 30%;">Fecha Creación:</td>
                <td style="border: none;">{{ estacion.fecha_creacion|date:"d/m/Y H:i" }}</td>
            </tr>
            <tr>
                <td style="border: none; font-weight: 600; color: #6c757d;">Última Modificación:</td>
                <td style="border: none;">{{ estacion.fecha_modificacion|date:"d/m/Y H:i" }}</td>
            </tr>
        </table>
    </div>
</div>
