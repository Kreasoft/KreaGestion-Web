{% extends "base.html" %}
{% load static %}

{% block title %}Eliminar Cliente{% endblock %}

{% block body_class %}hide-top-bar{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg" style="border: none; border-radius: 15px; overflow: hidden;">
                <!-- Header -->
                <div class="card-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); color: white; padding: 25px;">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-exclamation-triangle me-3" style="font-size: 2.5rem; color: #ffc107;"></i>
                                <div>
                                    <h2 class="mb-1" style="font-weight: 700; font-size: 1.8rem;">Confirmar Eliminación</h2>
                                    <p class="mb-0" style="font-size: 1.1rem; opacity: 0.9;">Esta acción no se puede deshacer</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-end">
                            <a href="{% url 'clientes:cliente_detail' cliente.pk %}" class="btn btn-light">
                                <i class="fas fa-arrow-left me-2"></i>Cancelar
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Contenido -->
                <div class="card-body" style="padding: 30px;">
                    <div class="alert alert-danger" role="alert">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>¡Atención!
                        </h5>
                        <p class="mb-0">Estás a punto de eliminar permanentemente el siguiente cliente:</p>
                    </div>

                    <div class="card border-0 shadow-sm mb-4" style="border-radius: 10px;">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="text-muted mb-2">Información del Cliente</h6>
                                    <p class="mb-1"><strong>Código:</strong> {{ cliente.codigo }}</p>
                                    <p class="mb-1"><strong>Nombre:</strong> {{ cliente.nombre }}</p>
                                    <p class="mb-1"><strong>RUT:</strong> {{ cliente.get_rut_formateado }}</p>
                                    <p class="mb-1"><strong>Tipo:</strong> {{ cliente.get_tipo_cliente_display }}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted mb-2">Datos Comerciales</h6>
                                    <p class="mb-1"><strong>Estado:</strong> 
                                        <span class="badge bg-{{ cliente.get_estado_display_color }}">
                                            {{ cliente.get_estado_display }}
                                        </span>
                                    </p>
                                    <p class="mb-1"><strong>Límite de Crédito:</strong> ${{ cliente.limite_credito|floatformat:0 }}</p>
                                    <p class="mb-1"><strong>Plazo de Pago:</strong> {{ cliente.plazo_pago }} días</p>
                                    <p class="mb-1"><strong>Contactos:</strong> {{ cliente.contactos.count }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning" role="alert">
                        <h6 class="alert-heading">
                            <i class="fas fa-info-circle me-2"></i>Información Importante
                        </h6>
                        <ul class="mb-0">
                            <li>Se eliminarán <strong>todos los contactos</strong> asociados a este cliente.</li>
                            <li>Se eliminarán <strong>todos los movimientos</strong> de cuenta corriente.</li>
                            <li>Se eliminará <strong>todo el historial</strong> de precios personalizados.</li>
                            <li>Esta acción <strong>NO se puede deshacer</strong>.</li>
                        </ul>
                    </div>

                    <form method="post">
                        {% csrf_token %}
                        <div class="row">
                            <div class="col-md-6">
                                <a href="{% url 'clientes:cliente_detail' cliente.pk %}" class="btn btn-secondary w-100">
                                    <i class="fas fa-times me-2"></i>Cancelar
                                </a>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="fas fa-trash me-2"></i>Eliminar Definitivamente
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
